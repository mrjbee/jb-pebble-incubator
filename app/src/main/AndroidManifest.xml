<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="team.monroe.org.pebemusic">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="org.monroe.team.pebemusic.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="org.monroe.team.pebemusic.Dashboard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="org.monroe.team.pebemusic.CustomPlaylistPlayEventReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="org.monroe.team.pebemusic.PLAY" />
            </intent-filter>
            <intent-filter>
                <action android:name="org.monroe.team.pebemusic.NEXT" />
            </intent-filter>
        </receiver>

        <service
            android:name="org.monroe.team.pebemusic.MainService"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name="org.monroe.team.pebemusic.PebeMessageSubscriber"
            android:enabled="true" android:exported="true">
                <intent-filter>
                    <action android:name="com.getpebble.action.app.RECEIVE" />
                </intent-filter>
        </receiver>
    </application>

</manifest>